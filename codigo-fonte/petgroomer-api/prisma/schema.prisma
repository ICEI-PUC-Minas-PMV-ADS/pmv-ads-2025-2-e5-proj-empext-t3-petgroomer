generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  hash      String
  name      String
  role      Role     @default(CLIENTE)
  createdAt DateTime @default(now())
  refreshTokenHash String?
  agendamentos    Agendamento[]
}

enum Role {
  ADMIN
  PETSHOP
  CLIENTE
}

model Servico {
  id    Int     @id @default(autoincrement())
  nome  String
  valor Float
}

model Agendamento {
  id        Int          @id @default(autoincrement())
  cliente   User?        @relation(fields: [userId], references: [id])
  userId    String?
  data      DateTime     @db.Date
  status    StatusAgendamento @default(PENDENTE)
  nomeClienteManual String?   // Nome do cliente se n√£o houver userId
}


enum StatusAgendamento {
  PENDENTE
  APROVADO
  RECUSADO
  CANCELADO
}
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  hash      String
  name      String
  role      Role     @default(CLIENTE)
  createdAt DateTime @default(now())
  refreshTokenHash String?
}

enum Role {
  ADMIN
  PETSHOP
  CLIENTE
}

model Servico {
  id    Int     @id @default(autoincrement())
  nome  String
  valor Float
}


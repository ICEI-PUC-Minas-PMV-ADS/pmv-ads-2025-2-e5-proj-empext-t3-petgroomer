{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2019",

    "resolvePackageJsonExports": false,
    "resolvePackageJsonImports": false,

    "noEmit": false,
    "declaration": false,
    "emitDeclarationOnly": false,
    "sourceMap": false
  },
  "exclude": ["node_modules", "test", "dist", "**/*.spec.ts"]
}
